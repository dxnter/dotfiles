# Shortcuts
alias c="clear"
alias code="code -n"
alias change="code ~/.config/zsh/.zshrc"
alias update="source ~/.config/zsh/.zshrc"
alias grep="rg"
alias cat="bat"
alias diff="delta"
alias weather="curl https://wttr.in/"

# Directories
alias dotfiles="cd ~/.dotfiles"
alias dev="cd $HOME/code"
alias work="cd $HOME/code/work"

# sed
alias sed="gsed"

# lsd
alias ls="lsd"
alias l="ls"
alias ll="ls -l"
alias la="ls -a"
alias lla="ls -la"
alias lt="ls --tree"

# nvim
alias vim="nvim"
alias vi="nvim"
alias oldvim="\vim"

# tmux
alias t="tmux"
alias ta="t a -t"
alias tls="t ls"
alias tn="t new -t"

###############################################################################
# .inputrc - this is run *while commands are entered*
###############################################################################
# makes autocomplete ignore case on the command line
set completion-ignore-case On
# ignore dash/underscore differences when completing
set completion-map-case on
# don't send bell if tab completion is ambiguous, immediately show alternatives
set show-all-if-ambiguous on
# colored file completion
set colored-stats on
# color beginning of completion
set colored-completion-prefix on
# behave smarter when completing in the middle of a word
set skip-completed-text on
# show file type with suffix too
set visible-stats on
